@using RecettesFamille.Data.EntityModel.RecipeSubEntity
@inherits BaseBlockDefinition<BlockIngredientListEntity>

@if (Block.Ingredients is null)
{
    <MudSkeleton SkeletonType="SkeletonType.Rectangle" Width="100%" Height="110px" />
}
else
{
    <MudTable Items="@Block.Ingredients" Dense="true" Hover="true" Striped="false" Class="mx-7 mb-2 rounded-lg"
              MultiSelection="false" Style="height:100%" RowClass="mud-table-extra-dense" >
        <ToolBarContent>
            <MudText Typo="Typo.h6">Ingrédients</MudText>
        </ToolBarContent>
        <RowTemplate>
            <MudTd>@context.Name</MudTd>
            <MudTd>@context.Quantity</MudTd>
        </RowTemplate>
    </MudTable>
}

